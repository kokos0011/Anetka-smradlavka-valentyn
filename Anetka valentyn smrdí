<script>
let noClicks = 0;

const texts = [
    "tak쬰 ne? maybe cheater 游봌",
    "Zkus to je코t캩 jednou a zbiju te",
    "No tak pipino",
    "U nem치코 na v칳b캩r 游땚",
    "ANO je jedin치 mo쬹ost mrk mkrk仇벒잺",
];

function noClick() {
    noClicks++;

    document.getElementById("text").innerText =
        texts[Math.min(noClicks, texts.length - 1)];

    let yesBtn = document.getElementById("yes");
    let size = 18 + noClicks * 10;
    yesBtn.style.fontSize = size + "px";
    yesBtn.style.padding = (12 + noClicks * 5) + "px";

    if (noClicks >= 4) {
        document.getElementById("no").style.display = "none";
    }
}

function yesClick() {
    document.getElementById("photo").src = "foto2.jpg";
    document.getElementById("text").innerText =
